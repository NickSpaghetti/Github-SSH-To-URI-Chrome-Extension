{
    "manifest_version": 3,
    "name":"Github SSH to Clickable URI",
    "description":"converts SSH endpoints to clickable https URI",
    "permissions": [
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "https://github.com/*"
    ],
    "version":"1.0.0",
    "action":{
        "default_popup": "index.html"
    },
    "content_scripts":[{
        "matches":["https://github.com/*"],
        "js": ["contentscript.js"],
        "run_at": "document_end"
    }],
    "background": {
        "service_worker": "backgroundscript.js"
    }

}